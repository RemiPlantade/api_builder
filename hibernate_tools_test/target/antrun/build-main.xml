<?xml version="1.0" encoding="UTF-8" ?>
<project name="maven-antrun-" default="main"  >
<target name="main">
  <echo message="Start generating entities .."/>
  <taskdef classname="org.hibernate.tool.ant.HibernateToolTask" name="hibernatetool"/>
  <hibernatetool>
    <jdbcconfiguration configurationfile="src/hibernate.cfg.xml" propertyfile="hibernate.properties" detectmanytomany="true" packagename="api_builder.bean"/>
    <hbmtemplate template="pojo/Pojo.ftl" templateprefix="pojo/" destdir="src/main/java/api_builder/bean" filepattern="{class-name}.java">
      <property value="true" key="jdk5"/>
      <property value="true" key="ejb3"/>
    </hbmtemplate>
    <hbmtemplate template="dao/daohome.ftl" templateprefix="pojo/" destdir="src/main/java/api_builder/dao" filepattern="{class-name}.java">
      <property value="true" key="jdk5"/>
      <property value="true" key="ejb3"/>
    </hbmtemplate>
  </hibernatetool>
  <echo message="End generating entities"/>
</target>
</project>