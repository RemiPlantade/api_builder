<?xml version="1.0" encoding="UTF-8" ?>
<project name="maven-antrun-" default="main"  >
<target name="main">
  <echo message="Start generating entities .."/>
  <taskdef classname="org.hibernate.tool.ant.HibernateToolTask" name="hibernatetool"/>
  <hibernatetool>
    <jdbcconfiguration configurationfile="hibernate.cfg.xml" revengfile="hibernate.reveng.xml" detectmanytomany="true" packagename="api_builder.bean"/>
    <hbm2java jdk5="false" destdir="src/main/java" ejb3="true"/>
    <hbmtemplate template="pojo/Pojo.ftl" templateprefix="pojo/" destdir="src/main/java" filepattern="api_builder.bean/{class-name}.java"/>
  </hibernatetool>
  <echo message="End generating entities"/>
</target>
</project>